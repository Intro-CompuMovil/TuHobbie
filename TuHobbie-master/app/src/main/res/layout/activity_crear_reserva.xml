<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CrearReserva">

    <androidx.cardview.widget.CardView
            android:id="@+id/cardViewCrearReserva"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardBackgroundColor="#DDDDDD"
            app:cardCornerRadius="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

            <!-- Nombre del Equipo -->
            <TextView
                    android:id="@+id/nombreEquipoTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nombre del Equipo"
                    android:textSize="18sp"
                    android:layout_centerHorizontal="true"
                    app:layout_constraintTop_toTopOf="parent"/>

            <EditText
                    android:id="@+id/nombreEquipoEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nombreEquipoTextView"
                    android:hint="Ingrese el nombre del equipo"
                    android:inputType="text"
                    app:layout_constraintTop_toBottomOf="@id/nombreEquipoTextView"/>

            <!-- Calendario -->
            <CalendarView
                    android:id="@+id/calendarViewReserva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/nombreEquipoEditText"
                    app:layout_constraintTop_toBottomOf="@id/nombreEquipoEditText"/>

            <!-- Dos NumberPickers -->
            <LinearLayout
                    android:id="@+id/linearNumberPickers"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/calendarViewReserva"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/calendarViewReserva">

                <NumberPicker
                        android:id="@+id/horaNumberPickerReserva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <NumberPicker
                        android:id="@+id/minutoNumberPickerReserva"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <!-- Texto no editable "Cancha" -->
            <TextView
                    android:id="@+id/textoCancha"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancha"
                    android:layout_below="@id/linearNumberPickers"
                    android:layout_centerHorizontal="true"
                    app:layout_constraintTop_toBottomOf="@id/linearNumberPickers"/>

            <!-- Aquí puedes añadir más elementos según sea necesario -->

            <!-- Botón Crear Reserva -->
            <Button
                    android:id="@+id/crearReservaButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textoCancha"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="16dp"
                    android:text="Crear Reserva"
                    app:layout_constraintTop_toBottomOf="@id/textoCancha"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
