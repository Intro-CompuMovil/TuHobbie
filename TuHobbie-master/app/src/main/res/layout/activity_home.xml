<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/texto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:hint="DirecciÃ³n"
            android:inputType="text"
            android:imeOptions="actionSend"
            android:background="@drawable/roundcorner" />

        <Button
            android:id="@+id/verPerfilButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/imagen_centro"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:gravity="center" />
    </LinearLayout>

    <Spinner
        android:id="@+id/spinnerDeportes"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:entries="@array/deportes_array" />

    <org.osmdroid.views.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </org.osmdroid.views.MapView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/verEventosButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:text="Ver Eventos" />

        <Button
            android:id="@+id/verEquiposButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="32dp"
            android:text="Ver Equipos" />
    </RelativeLayout>
</LinearLayout>
